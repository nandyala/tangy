    <repositories>
        <repository>
            <id>central</id>
            <url>http://artifactory:8182/artifactory/repo</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>central</id>
            <url>http://artifactory:8182/artifactory/repo</url>
        </pluginRepository>
    </pluginRepositories>

    <profiles>
        <profile>
            <id>windows</id>
            <properties>
                <platform>windows</platform>
                <java.tools>${java.home}/../lib/tools.jar</java.tools>
            </properties>
            <activation>
                <activeByDefault>true</activeByDefault>
                <os>
                    <family>Windows</family>
                </os>
            </activation>
        </profile>
        <profile>
            <id>mac</id>
            <properties>
                <platform>mac</platform>
                <java.tools>${java.home}/../Classes/classes.jar</java.tools>
            </properties>
            <activation>
                <os>
                    <family>mac</family>
                </os>
            </activation>
        </profile>
        <profile>
            <id>linux</id>
            <properties>
                <platform>linux</platform>
                <java.tools>${java.home}/../lib/tools.jar</java.tools>
            </properties>
            <activation>
                <os>
                    <name>Linux</name>
                </os>
            </activation>
        </profile>
    </profiles>

    <distributionManagement>
        <repository>
            <id>ozFactory</id>
            <name>ozFactory-releases</name>
            <url>http://pangu:8182/artifactory/libs-release-local</url>
        </repository>

        <snapshotRepository>
            <id>ozFactory</id>
            <name>ozFactory-snapshots</name>
            <url>http://pangu:8182/artifactory/libs-release-local</url>
        </snapshotRepository>
    </distributionManagement>

